    <script>
        function toggleSnackSignUp() {
            var x = document.getElementById("toggleSignUp");
            if (x.innerHTML === "Bring: juice and oranges 0/1") {
                x.innerHTML = "Bring: juice and oranges 1/1";
                toggleSnackList();
                toggleButtonAppearance();
            } else {
                x.innerHTML = "Bring: juice and oranges 0/1";
            }

        }

        function toggleButtonAppearance() {
            var x = document.getElementById("toggleButton");
            x.style.background = "Green"; 
            x.innerHTML = "Signed Up!";
        }

        function toggleCarpoolButton() {
            var x = document.getElementById("carpoolButton");
            x.style.background = "Green";
            x.innerHTML = "Confirmed!";
            var y = document.getElementById("DarrenBrownRadio");
            y.innerHTML = "Darren Brown (3/4)";
        }

        function toggleSnackList() {
            $("#item").toggle("slow");
            var x = document.getElementById("warning");
            x.innerHTML = ""; 
        }


    </script>

