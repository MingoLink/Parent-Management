<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-fixed-top bg-dark flex-md-nowrap shadow mt-0">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="navbar-brand col-sm-3 col-md-1 pl-0" href="@Url.Action("Index", "Home")">TeamSpace</a>
            </li>
        </ul>
        @Html.Partial("_LoginPartial")
    </nav>
    
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-1 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Account", "Home")">
                                <div>
                                    <img src="~/Content/Icon/man-user.svg" width="50" height="50" class="mx-auto d-block" />
                                    <h6 align="center">Account</h6>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" href="@Url.Action("Calendar", "Home")">
                                <div>
                                    <img src="~/Content/Icon/calendar.svg" width="50" height="50" class="mx-auto d-block"/>
                                    <h6 align="center">Calendar</h6>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" href="@Url.Action("Squads", "Home")">
                                <div class="mx-auto">
                                    <img src="~/Content/Icon/multiple-users.svg" width="50" height="50" class="mx-auto d-block" />
                                    <h6 align="center">Squads</h6>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" href="@Url.Action("Messages", "Home")">
                                <div class="mx-auto">
                                    <img src="~/Content/Icon/chat.svg" width="50" height="50" class="mx-auto d-block" />
                                    <h6 align="center">Messages</h6>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" href="@Url.Action("FAQ", "Home")">
                                <div class="mx-auto">
                                    <img src="~/Content/Icon/question-mark.svg" width="50" height="50" class="mx-auto d-block" />
                                    <h6 align="center">FAQ</h6>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="container body-content col-md-9">
                <!-- this is where the main page content will be displayed-->
                @RenderBody()
            </div>
            <div class="container body-content col-md-2">
                <!-- this is where upcoming events and announcements will go-->
                <div class="row">
                    <div class="col">
                        <h5>Upcoming Events</h5>
                        <div class="list-group" >
                            
                            <a class="list-group-item list-group-item-action flex-column align-items-start" href="#">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Cheerapalooza</h6>
                                </div>
                                <p class="mb-1">Saturday, May 11th</p>
                                <p class="mb-1">9:00am</p>
                            </a>
                            <a class="list-group-item list-group-item-action flex-column align-items-start" href="#">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Sleepover at Becky's</h6>
                                </div>
                                <p class="mb-1">Saturday, May 11th</p>
                                <p class="mb-1">10:00pm</p>
                            </a>
                            <a class="list-group-item list-group-item-action flex-column align-items-start" href="#">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Bake Sale</h6>
                                </div>
                                <p class="mb-1">Wednesday, May 15th</p>
                                <p class="mb-1">3:00pm</p>
                            </a>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <h5>Announcements</h5>
                        <div class="list-group">
                            <a class="list-group-item list-group-item-action flex-column align-items-start" href="#">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Gluten Free Snacks Only</h6>
                                </div>
                                <p class="mb-1">For cheerleading events, please only bring gluten-free items for the...</p>
                                
                                <small>May 11th, 2019 4:00pm</small>
                            </a>
                            <a class="list-group-item list-group-item-action flex-column align-items-start" href="#">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">No vaping in the locker room</h6>
                                </div>
                                <p class="mb-1">Vaping is bad, m'kay?</p>
                                
                                <small>May 10th, 2019 7:00pm</small>
                            </a>
                            <a class="list-group-item list-group-item-action flex-column align-items-start" href="#">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Personal Hygiene 101</h6>
                                </div>
                                <p class="mb-1">Please remind your children to take a shower before coming to practice...</p>
                                
                                <small>April 15th, 2019 5:43pm</small>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    

    
         



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
