@{
    ViewBag.Title = "Home";
}
<h2 class="text-center">Bellevue High Cheerleading</h2>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-sm-10">
            <div class="col-md-12">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/Content/Img/IMG_0016.jpg" alt="First slide">
                            <div class="carousel-caption d-none d-md-block">
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Content/Img/1181_UCAPuget2017.jpg" alt="Second slide">
                            <div class="carousel-caption d-none d-md-block">
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Content/Img/IMG_0201.jpg" alt="Third slide">
                            <div class="carousel-caption d-none d-md-block">
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Content/Img/IMG_1357.jpg" alt="Fourth slide">
                            <div class="carousel-caption d-none d-md-block">
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Content/Img/IMG_6403.jpg" alt="Fifth slide">
                            <div class="carousel-caption d-none d-md-block">
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Content/Img/IMG_7108.jpg" alt="Sixth slide">
                            <div class="carousel-caption d-none d-md-block">
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-sm-10">
                <h3 class="mt-3 mb-3">Current Cheer Squads</h3>

                <div class="card-deck">
                    <div class="card border-dark">
                        <a href="@Url.Action("FreshmanSquad", "Home")">
                            <img class="card-img-top" src="~/Content/Img/WASUCheerleading.jpg" alt="Freshman Squad Image">
                            <div class="card-body">
                                <h5>Freshman</h5>
                            </div>
                        </a>
                    </div>
                    <div class="card border-dark">
                        <a href="#">
                            <img class="card-img-top" src="~/Content/Img/UWCheerleading.jpg" alt="Junior Varsity Squad Image">
                            <div class="card-body">
                                <h5>Junior Varsity</h5>
                            </div>
                        </a>
                    </div>
                    <div class="card border-dark">
                        <a href="#">
                            <img class="card-img-top" src="~/Content/Img/SeahawksCheerleading.jpg" alt="Varsity Squad Image">
                            <div class="card-body">
                                <h5>Varsity</h5>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>